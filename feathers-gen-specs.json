{
  "options": {
    "ver": "1.0.0",
    "inspectConflicts": false,
    "semicolons": true,
    "freeze": [
      "logger.js"
    ],
    "ts": false
  },
  "app": {
    "environmentsAllowingSeedData": "tests",
    "seedData": false,
    "name": "africoders-api",
    "description": "API for serving Africoders.com data",
    "src": "src",
    "packager": "npm@>= 3.0.0",
    "providers": [
      "rest",
      "socketio"
    ]
  },
  "services": {
    "roles": {
      "name": "roles",
      "nameSingular": "role",
      "subFolder": "account",
      "fileName": "roles",
      "adapter": "mongoose",
      "path": "/roles",
      "isAuthEntity": false,
      "graphql": true
    },
    "users": {
      "name": "users",
      "nameSingular": "user",
      "subFolder": "account",
      "fileName": "users",
      "adapter": "mongoose",
      "path": "/users",
      "isAuthEntity": true,
      "graphql": true,
      "requiresAuth": true
    },
    "apiKeys": {
      "name": "apiKeys",
      "nameSingular": "apiKey",
      "subFolder": "base",
      "fileName": "api-keys",
      "adapter": "mongoose",
      "path": "/api-keys",
      "isAuthEntity": false,
      "graphql": true
    },
    "histories": {
      "name": "histories",
      "nameSingular": "history",
      "subFolder": "base",
      "fileName": "histories",
      "adapter": "mongoose",
      "path": "/histories",
      "isAuthEntity": false,
      "requiresAuth": false,
      "graphql": true
    }
  },
  "hooks": {
    "log-to-history": {
      "fileName": "log-to-history",
      "camelName": "logToHistory",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    },
    "authenticate": {
      "fileName": "authenticate",
      "camelName": "authenticate",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    },
    "authorize-user-action": {
      "fileName": "authorize-user-action",
      "camelName": "authorizeUserAction",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    },
    "escape-auth-check": {
      "fileName": "escape-auth-check",
      "camelName": "escapeAuthCheck",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    },
    "skip-remaining-hook": {
      "fileName": "skip-remaining-hook",
      "camelName": "skipRemainingHook",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    },
    "validate-api-key": {
      "fileName": "validate-api-key",
      "camelName": "validateApiKey",
      "ifMulti": "y",
      "multiServices": [
        "*app"
      ],
      "singleService": ""
    }
  },
  "connections": {
    "mongoose": {
      "database": "mongodb",
      "adapter": "mongoose",
      "connectionString": "mongodb://localhost:27017/africoders_api"
    }
  },
  "authentication": {
    "strategies": [
      "local"
    ],
    "entity": "users"
  }
}
