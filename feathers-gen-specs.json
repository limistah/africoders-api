{
  "options": {
    "ver": "1.0.0",
    "inspectConflicts": false,
    "semicolons": true,
    "freeze": [
      "logger.js"
    ],
    "ts": false
  },
  "app": {
    "environmentsAllowingSeedData": "tests",
    "seedData": false,
    "name": "africoders-api",
    "description": "API for serving Africoders.com data",
    "src": "src",
    "packager": "npm@>= 3.0.0",
    "providers": [
      "rest",
      "socketio"
    ]
  },
  "services": {
    "roles": {
      "name": "roles",
      "nameSingular": "role",
      "subFolder": "account",
      "fileName": "roles",
      "adapter": "mongoose",
      "path": "/roles",
      "isAuthEntity": false,
      "graphql": true
    },
    "users": {
      "name": "users",
      "nameSingular": "user",
      "subFolder": "account",
      "fileName": "users",
      "adapter": "mongoose",
      "path": "/users",
      "isAuthEntity": false,
      "graphql": true
    },
    "apiKeys": {
      "name": "apiKeys",
      "nameSingular": "apiKey",
      "subFolder": "base",
      "fileName": "api-keys",
      "adapter": "mongoose",
      "path": "/api-keys",
      "isAuthEntity": false,
      "graphql": true
    }
  },
  "hooks": {},
  "connections": {
    "mongoose": {
      "database": "mongodb",
      "adapter": "mongoose",
      "connectionString": "mongodb://localhost:27017/africoders_api"
    }
  }
}
